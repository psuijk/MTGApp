                </Grid.ColumnDefinitions>
                <Button Text="+" Grid.Row="0" Grid.Column="0" HorizontalOptions="Center" />
                <Button Text="-" Grid.Row="0" Grid.Column="1" HorizontalOptions="Center" />
            </Grid>
        </StackLayout>
            <StackLayout VerticalOptions="CenterAndExpand">
